/* components/GaodeInputTips/GaodeInputTips.wxss */
.input-item { 
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 30rpx; /* 增大的间距 */
  padding: 0;
  position: relative;
}
.input-item:last-child {
  margin-bottom: 0rpx;
}

.input-item input {
  width: 100%;
  height: 80rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  /* 加粗+深灰色边框，更明显 */
  border: 3rpx solid #999999 !important; 
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 0 0 2rpx rgba(153, 153, 153, 0.1);
  appearance: none;
  -webkit-appearance: none;
}

.input-item input:focus {
  border-color: #666666 !important;
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(102, 102, 102, 0.2);
}

.text_box{
  margin: 10rpx 25rpx;
  padding-bottom: 15rpx;
}

.tips_container{
  position: absolute;
  z-index: 999;
  width: 100%;
  max-height: 50vh;
  overflow: auto;
  top: 100%;
  left: 0;
  border: 2rpx solid #999999;
  border-top: none;
  background-color: #ffffff;
  border-radius: 0 0 16rpx 16rpx;  /* 添加底部圆角 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);  /* 添加阴影增加立体感 */
}