/* pages/common/gaode/gaode.wxss */
page {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

page::before {
  content: '';
  display: block;
  height: 30vh; 
  width: 100%;
  background-color: transparent;
  flex-shrink: 0;
}

.input-wrapper {
  position: fixed;
  top: calc(180rpx + 70rpx); 
  left: 0;
  right: 0;
  z-index: 998; 
  background-color: #f5f5f5; 
  padding: 10rpx 20rpx; 
  box-sizing: border-box; 
}

/* 地图区域 */
.map-container {
  flex: 1;
  min-height: 0;
  width: 100%;
  position: relative;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 0rpx; 
  display: flex;
  flex-direction: column;
  margin-top: -20rpx; 
  height: calc(100vh - 290rpx);
}

.map {
  width: 100%;
  flex: 1;
  min-height: 0; /* 允许缩小 */
}

/* 地点信息卡片 */
.map_text {
  background-color: white;
  padding: 30rpx 25rpx; /* 充足内边距 */
  margin: 0 5rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  flex-shrink: 0;
  margin-top: -10rpx;
  position: relative;
  z-index: 10;
  border-radius: 15rpx;
  height: 200rpx; 
  box-sizing: border-box; /* 内边距计入高度 */
}

/* 卡片顶部小把手样式 */
.map_text::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
}

.h1 {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
  display: block;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  display: block;
}

/* 距离和时长区域 */
.text_box {
  display: flex;
  justify-content: center; 
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  margin-top: 10rpx;
  gap: 60rpx; 
  height: 80rpx; /* 固定行高 */
}

.text {
  font-size: 32rpx; 
  color: #333;
  font-weight: 600;
  flex: none; 
  padding: 10rpx 20rpx;
  background-color: #f8f8f8; /* 浅色背景突出显示 */
  border-radius: 8rpx;
}

.text:first-child {
  color: #07c160;
}

.text:last-child {
  color: #ff6b35;
  justify-content: center;
}

/* 适配不同屏幕高度 */
@media screen and (max-height: 600px) {
  .map-container::before {
    height: 15vh;
  }
  
  .map_text {
    height: 180rpx; /* 小屏略减高度 */
    padding: 25rpx 25rpx;
  }
  
  .h1 {
    font-size: 30rpx;
  }
  
  .text {
    font-size: 28rpx;
    gap: 40rpx;
  }
}

@media screen and (min-height: 1000px) {
  .map-container::before {
    height: 22vh;
  }
  
  .map_text {
    height: 220rpx; /* 大屏略增高度 */
    padding: 35rpx 35rpx;
    border-radius: 20rpx;
  }
  
  .h1 {
    font-size: 38rpx;
  }
  
  .text {
    font-size: 36rpx;
    gap: 80rpx;
  }
}

/* 平滑过渡效果 */
.map-container, .map_text {
  transition: all 0.3s ease;
}