.page{ background:#f5f5f5; min-height:100vh; padding-bottom:40rpx; }
.page.dark{ background:#0d0d0d; color:#e5e5e5; }

.header{ display:flex; align-items:center; justify-content:space-between;
         padding:48rpx 32rpx; background:linear-gradient(#fff,#f5f5f5); }
.page.dark .header{ background:linear-gradient(#1a1a1a,#0d0d0d); }
.user{ display:flex; align-items:center; }
.avatar{ width:96rpx; height:96rpx; border-radius:50%; border:4rpx solid #fff; }
.info{ margin-left:24rpx; }
.nick{ font-size:32rpx; font-weight:500; }
.vip-tag{ display:inline-block; margin-left:12rpx; padding:4rpx 12rpx;
          font-size:22rpx; color:#fff; background:linear-gradient(135deg,#f9d423 0%,#f83600 100%);
          border-radius:8rpx; }
.qr{ font-size:40rpx; color:#666; }

.vip-card{ background:#fff; margin:0 32rpx 24rpx; padding:32rpx;
           border-radius:24rpx; box-shadow:0 8rpx 24rpx rgba(0,0,0,.08); }
.page.dark .vip-card{ background:#2d2d2d; }
.top{ display:flex; justify-content:space-between; margin-bottom:24rpx; }
.title{ font-size:28rpx; font-weight:500; }
.days{ font-size:24rpx; color:#888; }
.privilege{ display:flex; justify-content:space-around; margin-bottom:24rpx; }
.privilege .item{ text-align:center; }
.privilege .icon{ font-size:48rpx; color:#07c160; }
.privilege .txt{ display:block; font-size:24rpx; margin-top:8rpx; }

.tool-box{ display:flex; flex-wrap:wrap; background:#fff; margin:0 32rpx 24rpx;
           border-radius:24rpx; padding:24rpx 0; }
.page.dark .tool-box{ background:#1a1a1a; }
.tool-item{ width:25%; text-align:center; padding:16rpx 0; }
.tool-item .icon{ font-size:48rpx; color:#07c160; }
.tool-item .txt{ display:block; font-size:24rpx; margin-top:8rpx; }

.order-wallet{ background:#fff; margin:0 32rpx 24rpx; border-radius:24rpx; }
.page.dark .order-wallet{ background:#1a1a1a; }
.cell{ display:flex; justify-content:space-between; padding:32rpx; border-bottom:1rpx solid #f0f0f0; }
.page.dark .cell{ border-color:#2a2a2a; }
.arrow{ color:#ccc; }
.sub-nav{ display:flex; justify-content:space-around; padding:24rpx 0; }
.sub-item{ text-align:center; position:relative; }
.sub-item .num{ display:block; font-size:32rpx; font-weight:500; }
.sub-item .txt{ font-size:24rpx; color:#666; }
.dot{ position:absolute; top:0; right:20rpx; width:16rpx; height:16rpx; background:#f44336; border-radius:50%; }

.wallet{ display:flex; justify-content:space-around; padding:24rpx 0; border-top:1rpx solid #f0f0f0; }
.page.dark .wallet{ border-color:#2a2a2a; }
.wallet-item{ text-align:center; }
.wallet-item .num{ display:block; font-size:32rpx; font-weight:500; color:#07c160; }
.wallet-item .txt{ font-size:24rpx; color:#666; }

.creator-card{ display:flex; justify-content:space-between; align-items:center;
               background:#fff; margin:0 32rpx 24rpx; padding:32rpx;
               border-left:8rpx solid #07c160; border-radius:24rpx; }
.page.dark .creator-card{ background:#1f1f1f; }
.creator-card .title{ font-size:32rpx; font-weight:500; }
.creator-card .sub{ display:block; font-size:24rpx; color:#666; margin-top:8rpx; }
.creator-card .income{ display:block; font-size:28rpx; color:#07c160; margin-bottom:16rpx; }

.footer{ background:#fff; margin:0 32rpx; border-radius:24rpx; }
.page.dark .footer{ background:#1a1a1a; }