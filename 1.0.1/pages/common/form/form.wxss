page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  padding: 24rpx;
}
.form-group {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}
.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}
.form-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 32rpx;
}
.form-item {
  margin-bottom: 32rpx;
}
.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}
.input, .picker, .textarea {
  width: 100%;
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}
.textarea {
  height: 160rpx;
}
.placeholder {
  color: #999;
}
.submit-btn {
  margin-top: 48rpx;
  background: linear-gradient(135deg, #007aff, #0056b3);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0,122,255,0.3);
}
.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}