/* 重置页面布局，解决滚动问题 */
page {
  height: 100%;
  background-color: #f7f7f7;
}

/* 滚动容器：设置为全屏高度，支持自然滚动 */
.scrollarea {
  height: 100vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; /* 开启iOS弹性滚动，更顺滑 */
  box-sizing: border-box;
  padding-bottom: 20rpx; /* 底部留白，避免最后一个卡片被遮挡 */
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}

/* 分类菜单样式 */
.category-container {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
}
.category-scroll {
  white-space: nowrap;
}
.category-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}
.category-tag.active {
  background: #f6a26d;
  color: #fff;
  font-weight: 600;
}
.category-tag:last-child {
  margin-right: 0;
}

/* 餐厅卡片样式（优化间距，避免拥挤） */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx; /* 增加卡片间距，更透气 */
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: row;
  transition: all 0.3s ease;
}
.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.card-img {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background-color: #eee;
}
.card-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.card-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.card-tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.tag {
  font-size: 22rpx;
  color: #555;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 空状态/加载状态 */
.empty {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  color: #ddd;
  display: block;
}
.loading {
  padding: 80rpx 0;
  text-align: center;
}
.loading-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  animation: rotate 1s linear infinite;
  display: block;
}
@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 列表项滚动渐入动画 */
.animate-item {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.5s ease forwards;
}
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 餐厅弹框样式 */
.intro-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  padding: 30rpx;
}
.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  max-height: 85vh;
  overflow-y: auto;
}
.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  display: block;
  text-align: center;
  margin-bottom: 16rpx;
}
.modal-img {
  width: 100%;
  height: 280rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  object-fit: cover;
}
.modal-base-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}
.base-tag {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  color: #666;
}
.modal-section {
  margin-bottom: 20rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}
.modal-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
.close-btn {
  width: 100%;
  background: #f6a26d;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 12rpx;
  margin-top: 12rpx;
}
.close-btn:active {
  background: #e8955c;
}
.stopPropagation {
  pointer-events: auto;
}