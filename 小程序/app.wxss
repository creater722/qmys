/**app.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
  }
  
  /* 通用样式 */
  .page {
    height: 100%;
    background-color: #f8f8f8;
  }
  
  /* 文本样式 */
  .text-primary {
    color: #007AFF;
  }
  
  .text-success {
    color: #09BB07;
  }
  
  .text-warning {
    color: #E64340;
  }
  
  /* 按钮样式 */
  .btn {
    padding: 20rpx 40rpx;
    border-radius: 10rpx;
    text-align: center;
    font-size: 32rpx;
  }
  
  .btn-primary {
    background-color: #007AFF;
    color: white;
  }
  
  .btn-default {
    background-color: #F8F8F8;
    color: #333333;
    border: 1rpx solid #EEEEEE;
  }