<!--pages/index/index.wxml-->
<view class="container">
  <!-- 使用绝对定位的轮播图 -->
  <view class="top-banner">
    <swiper class="banner-swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{500}}">
      <swiper-item wx:for="{{bannerList}}" wx:key="id">
        <image class="banner-image" src="{{item.imageUrl}}" mode="aspectFill" bindtap="onBannerTap" data-url="{{item.linkUrl}}"></image>
      </swiper-item>
    </swiper>
  </view>

  <!-- 主要内容区域，添加上边距避免被轮播图遮挡 -->
  <view class="main-content" style="margin-top: {{bannerHeight}}px;">
    <view class="main-title">
      <text class="title-text">齐鸣要述</text>
    </view>
    
    <!-- 其他内容 -->
    <view class="userinfo">
      <!-- 用户信息内容 -->
    </view>
    
    <view class="btn-area">
      <button class="btn btn-primary" bindtap="navigateToLogs">查看启动日志</button>
      <button class="btn btn-default" bindtap="makeRequest">测试网络请求</button>
    </view>
  </view>
</view>