/**pages/index/index.wxss**/

/* 顶部轮播图样式 */
.top-banner {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
    z-index: 999;
  }
  
  .banner-swiper {
    width: 100%;
    height: 100%;
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
  }
  
  /* 主要内容区域 */
  .main-content {
    width: 100%;
    position: relative;
    z-index: 1;
  }
  
  /* 大标题样式 */
  .main-title {
    text-align: center;
    margin: 40rpx 0 20rpx 0;
    padding: 30rpx 0;
  }
  
  .title-text {
    font-size: 48rpx;
    font-weight: bold;
    color: #333333;
    letter-spacing: 4rpx;
  }
  
  /* 其他原有样式保持不变 */
  .container {
    position: relative;
  }