.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.rental-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rental-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  padding: 20rpx;
}

.cover-wrap {
  position: relative;
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.price-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 4rpx 0;
}

.info-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.tags {
  display: flex;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  color: #07c160;
  background: #f0f9ff;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.empty, .loading, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}