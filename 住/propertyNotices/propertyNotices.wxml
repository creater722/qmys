<view class="container">
  <!-- 标题栏（简化布局，确保返回按钮显示） -->
  <view class="title-bar">
    <!-- 返回按钮（调整层级，确保可见） -->
    <view class="back-btn" bindtap="goBack">
      <text class="back-icon">←</text>
      <text class="back-text">返回</text>
    </view>
    <!-- 标题 -->
    <view class="page-title">物业公告</view>
  </view>

  <!-- 公告列表 -->
  <view class="notice-item" wx:for="{{noticesList}}" wx:key="id">
    <view class="notice-title">{{item.title || '无标题'}}</view>
    <view class="notice-content">{{item.content || '无内容'}}</view>
    <view class="notice-time">{{item.createTime || '未知时间'}}</view>
  </view>

  <!-- 空数据提示 -->
  <view class="empty" wx:if="{{noticesList.length === 0 && !isLoading}}">
    暂无公告
  </view>

  <!-- 加载中提示 -->
  <view class="loading" wx:if="{{isLoading}}">
    加载中...
  </view>

  <!-- 没有更多数据 -->
  <view class="no-more" wx:if="{{!hasMore && noticesList.length > 0}}">
    没有更多数据了
  </view>
</view>

<style>
/* 标题栏：使用flex布局，确保按钮和标题并列 */
.title-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  /* 增加层级，防止被遮挡 */
  position: relative;
  z-index: 10;
}

/* 返回按钮：简化样式，确保可见 */
.back-btn {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  /* 增加点击区域 */
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 标题：不设置margin，避免遮挡 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  /* 让标题居中 */
  flex: 1;
  text-align: center;
}

/* 原有样式保留 */
.notice-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.notice-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

.empty, .loading, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}
</style>