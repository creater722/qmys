/* pages/住/hotelDetail/hotelDetail.wxss */page {
  background-color: #f5f5f5;
}

.page-container {
  padding-bottom: 120rpx;
}

/* 封面图 */
.cover-img {
  width: 100%;
  height: 300rpx;
}

/* 基础信息 */
.base-info {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.tag-wrap {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.star-tag {
  color: #ff9900;
  background-color: #fff8e6;
}

.score-tag {
  color: #007aff;
  background-color: #e8f4ff;
}

.address, .phone {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.address icon, .phone icon {
  margin-right: 10rpx;
}

.phone {
  color: #007aff;
}

/* 设施服务 */
.facility-wrap, .service-wrap {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

/* 房型列表 */
.room-list {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.room-item:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
}

.room-type {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
}

.room-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price {
  font-size: 28rpx;
  color: #ff4400;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.book-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.collect-btn {
  flex: 1;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.book-all-btn {
  flex: 2;
  background-color: #ff4400;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}