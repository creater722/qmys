page {
  background-color: #f5f5f5;
}

.page-container {
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.search-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 30rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  padding: 0;
}

/* 筛选栏 */
.filter-scroll {
  white-space: nowrap;
  background-color: #fff;
}

.filter-bar {
  display: inline-flex;
  padding: 10rpx 20rpx;
}

.filter-item {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  margin-right: 15rpx;
  font-size: 26rpx;
}

.filter-item.active {
  background-color: #007aff;
  color: #fff;
}

/* 酒店列表 */
.hotel-list {
  padding: 20rpx;
}

.hotel-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.cover-wrap {
  width: 200rpx;
  height: 180rpx;
  position: relative;
  margin-right: 20rpx;
}

.cover-img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.price-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #ff4400;
  color: #fff;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.info-wrap {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.tag-wrap {
  display: flex;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.star-tag {
  color: #ff9900;
  background-color: #fff8e6;
}

.score-tag {
  color: #007aff;
  background-color: #e8f4ff;
}

.address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.facilities {
  display: flex;
  gap: 10rpx;
  font-size: 22rpx;
  color: #666;
}

/* 空状态/加载中 */
.empty {
  text-align: center;
  padding: 80rpx 20rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.loading, .load-more {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more button {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}