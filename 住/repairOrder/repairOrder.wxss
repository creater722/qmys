/* pages/住/repairOrder/repairOrder.wxss */
/* 页面容器 */
.page-container {
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题栏（包含返回按钮）- 新增position确保z-index生效 */
.title-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx 10rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative; /* 新增：配合z-index */
  z-index: 10; /* 新增：确保标题栏不被遮挡 */
}

/* 返回按钮样式 - 增强可点击性 */
.back-btn {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
  /* 新增：核心优化 */
  z-index: 999; /* 确保按钮在最上层 */
  touch-action: manipulation; /* 禁用浏览器默认触摸行为，提升点击响应 */
  cursor: pointer; /* 鼠标指针样式（开发者工具） */
  user-select: none; /* 禁止文字选中，避免点击冲突 */
  min-width: 120rpx; /* 增加最小宽度，扩大点击区域 */
  justify-content: center; /* 内容居中，点击区域更均匀 */
}

/* 新增：点击反馈效果 */
.back-btn:active {
  background-color: #e5e5e5; /* 按下时变深，有触摸反馈 */
  transform: scale(0.98); /* 轻微缩放，增强点击体验 */
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 表单标题 */
.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 表单内容容器 */
.form-content {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.required {
  color: #f53f3f;
}

/* 选择器样式 */
.picker-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

/* 输入框样式 */
.text-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 文本域样式 */
.textarea-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

/* 提交按钮容器 */
.submit-btn-wrap {
  margin: 0 20rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
}

.submit-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}

/* 我的工单区域 */
.my-orders-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

/* 区域标题 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.refresh-btn {
  background-color: #f5f5f5;
  color: #333;
  font-size: 24rpx;
}

/* 工单项 */
.order-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

/* 工单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  color: #07c160;
  background-color: #f0f9ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 工单内容 */
.order-body {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.order-type, .order-address {
  display: block;
}

.order-time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 加载提示 */
.loading-tip, .empty-tip {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}