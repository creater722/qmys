/* pages/emergency-guide/emergency-guide.wxss */

/* 自定义导航栏样式 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.navbar-left {
  display: flex;
  align-items: center;
  color: #4facfe;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.navbar-right {
  padding: 16rpx 0;
}

.home-icon {
  font-size: 36rpx;
}

/* 页面内容 */
.page-content {
  padding: 24rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
  padding-top: 0;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 0;
}
.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}
.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}

/* 流程步骤 */
.section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 24rpx;
}

.guide-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.guide-item {
  display: flex;
  align-items: flex-start;
}
.guide-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  min-width: 60rpx;
}
.guide-content {
  flex: 1;
}
.guide-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}
.guide-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
  line-height: 1.5;
}

/* 联系方式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}
.contact-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.contact-info {
  flex: 1;
}
.contact-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}
.contact-number {
  font-size: 28rpx;
  color: #666;
  margin-top: 4rpx;
}
.copy-btn {
  background: #4facfe;
  color: white;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  margin: 0;
  line-height: 1;
}

/* 温馨提示 */
.tip-box {
  background: #e8f4ff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.tip-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #4facfe;
  margin-bottom: 16rpx;
}
.tip-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.back-btn, .home-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin: 0;
}

.back-btn {
  background: #f0f0f0;
  color: #666;
  border: 1rpx solid #ddd;
}

.home-btn {
  background: #4facfe;
  color: white;
}