/* pages/national-insurance/national-insurance.wxss */

/* 页面基础样式 */
.insurance-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

/* 自定义导航栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.navbar-left {
  display: flex;
  align-items: center;
  color: #4facfe;
  font-size: 28rpx;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.navbar-right {
  width: 80rpx;
  text-align: right;
}

.reload-icon {
  font-size: 36rpx;
  color: #4facfe;
}

/* 加载中样式 */
.loading-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #4facfe;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 错误提示样式 */
.error-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  background: white;
}

.error-content {
  text-align: center;
  max-width: 600rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.error-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #ff6b6b;
  display: block;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 48rpx;
}

.error-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0 32rpx;
}

.action-btn.primary {
  background: #4facfe;
  color: white;
}

.action-btn.secondary {
  background: #f0f7ff;
  color: #4facfe;
  border: 1rpx solid #4facfe;
}

.action-btn {
  background: white;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.error-tips {
  background: #fff8e1;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: left;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #ff9800;
  display: block;
  margin-bottom: 12rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  white-space: pre-line;
}

/* web-view 容器 */
.webview-container {
  flex: 1;
  position: relative;
}

.webview-container web-view {
  width: 100%;
  height: 100%;
}

/* 底部安全提示 */
.safety-notice {
  background: #e8f4ff;
  padding: 16rpx 24rpx;
  text-align: center;
  font-size: 22rpx;
  color: #4facfe;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.notice-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}