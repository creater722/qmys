.page{ min-height:100vh; background:#f5f5f5; }
.page.dark{ background:#0d0d0d; color:#e5e5e5; }

.skeleton{ padding:32rpx; }
.sk-card{ display:flex; background:#fff; border-radius:16rpx; padding:24rpx; margin-bottom:24rpx; }
.page.dark .sk-card{ background:#1a1a1a; }
.sk-cover{ width:160rpx; height:160rpx; background:#e6e6e6; border-radius:8rpx; }
.page.dark .sk-cover{ background:#2a2a2a; }
.sk-line{ height:24rpx; background:#e6e6e6; border-radius:8rpx; margin:16rpx 0 0 24rpx; }
.page.dark .sk-line{ background:#2a2a2a; }
.sk-title{ width:60%; }
.sk-sub{ width:40%; }

.empty{ text-align:center; padding-top:40vh; }
.empty image{ width:240rpx; height:240rpx; }
.empty text{ display:block; font-size:28rpx; color:#888; margin-top:24rpx; }

.list{ height:calc(100vh - env(safe-area-inset-bottom)); }
.card{ display:flex; background:#fff; border-radius:16rpx; margin:0 32rpx 24rpx; padding:24rpx; box-shadow:0 4rpx 12rpx rgba(0,0,0,.05); }
.page.dark .card{ background:#1a1a1a; box-shadow:none; }
.cover{ width:160rpx; height:160rpx; border-radius:8rpx; flex-shrink:0; }
.meta{ flex:1; margin-left:24rpx; display:flex; flex-direction:column; justify-content:space-between; }
.title{ font-size:30rpx; font-weight:500; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.sub{ font-size:26rpx; color:#666; margin-top:8rpx; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
.page.dark .sub{ color:#aaa; }
.bottom{ display:flex; justify-content:space-between; align-items:center; margin-top:12rpx; }
.date{ font-size:24rpx; color:#999; }
.liked{ font-size:32rpx; color:#f44336; }

.load-more{ text-align:center; font-size:24rpx; color:#888; padding:24rpx 0; }